package ch06.example;

public class Student {
	String name;
	int ban;
	int no;
	int kor;
	int eng;
	int math;

	Student() {
		this.name = name;
		this.ban = ban;
		this.no = no;
		this.kor = kor;
		this.eng = eng;
		this.math = math;
	}

	public int getTotal() {
		return kor + eng + math;
	}

	public String getAverage() {
		return  String.format("%.1f",getTotal() / 3f);
	}
}

package ch09;

public class Home {
	// 기존에는 인터페이스를 구현한 객체를 이용해 인스턴스를 만들었다.
//	RemoteControl rc = new RemoteControlImpl();

	// 위와 같은 동작을 하는 이름이 없는 익명 객체를 만들 수 있다.
	// 코드 내에서 한번만 객체를 사용할 것 같으면 굳이 클래스를 안만들어도 된다.
	
	//	new 인터페이스() --> 리턴: 구현 객체 (인스턴스)
	RemoteControl rc = new RemoteControl() {
		@Override
		public void turnOn() {
			System.out.println("전원을 켭니다");
		}

		@Override
		public void turnOff() {
			System.out.println("전원을 끕니다");
		}
	};
	
	//	new 클래스() --> 리턴: 상속 객체(인스턴스)
	// turnOn/turnOff/volumeUp
	RemoteControl rc2 = new RemoteControlImpl() {
		public void voulmeUp() {
			System.out.println("볼륨을 높입니다.");
		}
	};
	
	//	위 두개는 필드, 아래는 메소드다.
	public void useRemoteControl(RemoteControl rc) {
		rc.turnOn();
		rc.turnOff();
	}
}

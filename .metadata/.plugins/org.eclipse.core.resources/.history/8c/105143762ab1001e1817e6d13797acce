package ch08.example.exam4;

import java.util.*;

public class StudentDriver {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		Student[] student = new Student[2];
		String[] name = { "선남", "선녀" };

		for (int i = 0; i < student.length; i++) {
			student[i] = new Student(name[i]);
			System.out.println(name[i] + "의 퀴즈 점수를 입력하라: ");
			int quiz = Integer.parseInt(scan.nextLine());
			System.out.println(name[i] + "의 중간시험 점수를 입력하라: ");
			int midterm = Integer.parseInt(scan.nextLine());
			System.out.println(name[i] + "의 기말시험 점수를 입력하라: ");
			int finalterm = Integer.parseInt(scan.nextLine());

			student[i].setQuiz();
			student[i].setMidterm();
			student[i].setFinalTerm();
			System.out.println(name[i] + "의 총점은 " + totalScore(student[i]) + "이고 학점은 "
					+ totalGrade(student[i]) + "이다.");
		}
	}
	
	private static String totalGrade(Student s) {
		return s.calcGrade();
	}

	private static String totalScore(Student s) {
		return s.calcScore();
	}

}

package ch4;

import java.text.*;
import java.util.*;

public class MoneyCalc {
	public static void main(String[] args) {
		DecimalFormat decFormat = new DecimalFormat("###,###");
		String moneyLeft = decFormat.format(10000);
		
		//	현재 가진 돈 출력
		System.out.printf("현재 가진 돈은 %s입니다.\n",moneyLeft);
		//	사용할 돈 입력
		System.out.printf("얼마를 사용하시겠습니까? -->");
		//	사용할 돈과 현재 가진 돈 비교
		//	현재 가진 돈이 0일 경우 종료
	}
}

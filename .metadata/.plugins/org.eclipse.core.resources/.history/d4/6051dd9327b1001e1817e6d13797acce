package ch08.example.exam4;

import java.util.*;

public class StudentDriver {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		Student[] student = new Student[2];
		student[0].setName("선남");
		student[1].setName("선녀");
		
		for(int i=0; i<student.length; i++) {
			System.out.println(student[i] + "의 퀴즈 점수를 입력하라: ");
			int quiz = Integer.parseInt(scan.nextLine());
			System.out.println(student[i] + "의 중간시험 점수를 입력하라: ");
			int midterm = Integer.parseInt(scan.nextLine());
			System.out.println(student[i] + "의 기말시험 점수를 입력하라: ");
			int finalExam = Integer.parseInt(scan.nextLine());
		}

		System.out.println();
	}

}

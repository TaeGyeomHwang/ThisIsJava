package ch08.example.exam4;

import java.util.*;

public class StudentDriver {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		Student[] student = new Student[2];
		String[] name = { "선남", "선녀" };

		for (int i = 0; i < student.length; i++) {
			System.out.println(name[i] + "의 퀴즈 점수를 입력하라: ");
			int quiz = Integer.parseInt(scan.nextLine());
			System.out.println(name[i] + "의 중간시험 점수를 입력하라: ");
			int midterm = Integer.parseInt(scan.nextLine());
			System.out.println(name[i] + "의 기말시험 점수를 입력하라: ");
			int finalterm = Integer.parseInt(scan.nextLine());

			student[i] = new Student(quiz, midterm, finalterm);
			System.out.println(name[i] + "의 총점은 " + Student.totalScore(student[i]) + "이고 학점은 "
					+ Student.grade(student[i]) + "이다.");
		}

		System.out.println();
	}

}

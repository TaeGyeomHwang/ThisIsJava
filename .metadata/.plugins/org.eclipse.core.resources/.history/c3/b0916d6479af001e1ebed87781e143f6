package ch06.example;

public class Student {
	String name;
	int ban;
	int no;
	int kor;
	int eng;
	int math;

	Student() {
		this.name = name;
		this.ban = ban;
		this.no = no;
		this.kor = kor;
		this.eng = eng;
		this.math = math;
	}

	public int getTotal() {
		return kor + eng + math;
	}

	public float getAverage() {
		return  Math.round(getTotal() / 3f * 1000)/1000f;
	}
}

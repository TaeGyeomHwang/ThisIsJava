package thisisjava;

import java.util.*;

public class Hello {
	public static void main(String[] args) {		
		System.out.printf("상품의 가격: %d원\n",123);
		System.out.printf("상품의 가격: %6d원\n",123);
		System.out.printf("상품의 가격: %-6d원\n",123);
		System.out.printf("상품의 가격: %06d원\n",123);
		
		System.out.println("원의 반지름을 입력하세요 -> ");
	}
}

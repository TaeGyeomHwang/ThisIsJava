package ch08.example;

public class Truck extends Vehicle {
	int weight;

	public Truck(String name, int price, int weight) {
		this.name = name;
		this.price = price;
		this.weight = weight;
	}

	@Override
	public String getName() {
		return this.name;
	}

	@Override
	public void setName(String name) {
		this.name = name;
	}

	@Override
	public int getPrice() {
		return this.price;
	}

	@Override
	public void setPrice(int price) {
		this.price = price;
	}

	@Override
	public String getInfo() {
		return name;
	}

	@Override
	public Double calcTax() {
		return null;
	}

}

package ch4;

import java.util.*;

public class Pass {
	public static void main(String[] args) {
		int counter =0;
		
		//	출입증 입력
		Scanner scan = new Scanner(System.in);
		System.out.printf("출입증에 표기된 호수를 입력하세요 --> ");
		int input = scan.nextInt();
		
		
		System.out.println("출입 가능한 연구실 :");
		//	각각의 케이스에 대한 출력
		switch(input) {
			case 301:
				counter++;
				System.out.printf("%d 301호",counter);
			case 202:
				counter++;
				System.out.printf("%d 202호",counter);
			case 201:
				counter++;
				System.out.printf("%d 201호",counter);
			case 103:
				counter++;
				System.out.printf("%d 103호",counter);
			case 102:
				counter++;
				System.out.printf("%d 102호",counter);
			case 101:
				counter++;
				System.out.printf("%d 101호",counter);
		}
	}
}
